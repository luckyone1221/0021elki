{% for field in fields %}
{% if (field['code'] == 'category_id') %}
<div class="form-group sort-item" data-sort-order="{{ field['sort_order'] }}">
    <label class="col-sm-2 control-label" for="input_category"><span data-toggle="tooltip" title="{{ field['description'] }}">{{ field['name'] }}</span></label>
    <div class="col-sm-10">
        <input type="text" name="category_path" value="{{ category_path }}" placeholder="{{ field['name'] }}" id="input_category" class="form-control" />
        <input type="hidden" name="category_id" value="{{ category_id }}" />
    </div>
</div>
{% endif %}
{% endfor %}